@model List<WebCar.Models.ViewModels.OrderViewModel>

@{
    ViewBag.Title = "Đơn Hàng Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-shopping-bag me-2 text-primary"></i>
                    Đơn Hàng Của Tôi
                </h2>
                <a href="@Url.Action("Index","Product")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Đặt Hàng Mới
                </a>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Orders List -->
            @if (Model != null && Model.Count > 0)
            {
                <div class="row">
                    @foreach (var order in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card order-card shadow-sm h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">
                                        <i class="fas fa-receipt me-2"></i>
                                        Đơn hàng #@order.MaDon
                                    </span>
                                    <span class="badge @order.TrangThaiBadgeClass">
                                        @order.TrangThaiDisplay
                                    </span>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <!-- Hình ảnh xe -->
                                        <div class="col-md-5">
                                            @if (!string.IsNullOrEmpty(order.HinhAnh))
                                            {
                                                <img src="@Url.Content("~/" + order.HinhAnh)"
                                                     alt="@order.TenXe"
                                                     class="img-fluid rounded"
                                                     style="max-height: 150px; width: 100%; object-fit: cover;" />
                                            }
                                        </div>

                                        <!-- Thông tin đơn hàng -->
                                        <div class="col-md-7">
                                            <h5 class="card-title mb-2">@order.TenXe</h5>
                                            <p class="text-muted mb-2">
                                                <i class="fas fa-building me-2"></i>@order.HangXe
                                            </p>

                                            <div class="order-details">
                                                <p class="mb-1">
                                                    <i class="fas fa-calendar me-2 text-primary"></i>
                                                    <small>@order.NgayDat.ToString("dd/MM/yyyy HH:mm")</small>
                                                </p>
                                                <p class="mb-1">
                                                    <i class="fas fa-box me-2 text-primary"></i>
                                                    <small>Số lượng: <strong>@order.SoLuong</strong></small>
                                                </p>
                                                <p class="mb-2">
                                                    <i class="fas fa-money-bill-wave me-2 text-primary"></i>
                                                    <small>Đơn giá: <strong>@order.DonGia.ToString("N0") VNĐ</strong></small>
                                                </p>

                                                <h5 class="text-danger mb-3">
                                                    <i class="fas fa-tag me-2"></i>
                                                    Tổng: @order.TongTien.ToString("N0") VNĐ
                                                </h5>
                                            </div>

                                            <a href="@Url.Action("Details", new { id = order.MaDon })"
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>
                                                Chi Tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="empty-state">
                            <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                            <h4>Chưa Có Đơn Hàng Nào</h4>
                            <p class="text-muted mb-4">
                                Bạn chưa đặt hàng nào.  Hãy khám phá các sản phẩm của chúng tôi!
                            </p>
                            <a href="@Url.Action("Index","Product" )" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Mua Sắm Ngay
                            </a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            .order-card {
                transition: all 0.3s ease;
                border: 1px solid #e0e0e0;
            }

                .order-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
                    border-color: #0066cc;
                }

            .empty-state i {
                opacity: 0.3;
            }

            .order-details small {
                font-size: 0.9rem;
            }
        </style>
    }

    @section Scripts {
        <script>
        $(document).ready(function() {
            // Auto hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            console.log('✅ MyOrders page loaded');
        });
        </script>
    }
@model List<WebCar.Models.ViewModels.UserManagementViewModel>

@{
    ViewBag.Title = "Quản Lý Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-5 pt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-users me-2 text-primary"></i>
                    Quản Lý Users
                </h2>
                <div>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                </div>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Statistics Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="card stat-card-small border-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">TOTAL USERS</h6>
                                    <h3 class="mb-0">@(Model?. Count ?? 0)</h3>
                                </div>
                                <i class="fas fa-users fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-small border-danger">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">ADMINS</h6>
                                    <h3 class="mb-0">@(Model?.Count(u => u.RoleName == "ADMIN") ?? 0)</h3>
                                </div>
                                <i class="fas fa-shield-alt fa-2x text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-small border-warning">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">MANAGERS</h6>
                                    <h3 class="mb-0">@(Model?.Count(u => u.RoleName == "MANAGER") ?? 0)</h3>
                                </div>
                                <i class="fas fa-user-tie fa-2x text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-small border-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">CUSTOMERS</h6>
                                    <h3 class="mb-0">@(Model?.Count(u => u.RoleName == "CUSTOMER") ?? 0)</h3>
                                </div>
                                <i class="fas fa-user fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>Danh Sách Users
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="input-group" style="max-width: 300px; float: right;">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm... ">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="usersTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Họ Tên</th>
                                        <th>Email</th>
                                        <th>SĐT</th>
                                        <th>Role</th>
                                        <th>Ngày Đăng Ký</th>
                                        <th>Hoạt Động</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td><strong>#@user.MaKH</strong></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="user-avatar-small me-2">
                                                        @user.HoTen.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <span>@user.HoTen</span>
                                                </div>
                                            </td>
                                            <td>@user.Email</td>
                                            <td>@user.SDT</td>
                                            <td>
                                                <span class="badge @(user.RoleName == "ADMIN" ? "bg-danger" :
                                                                      user.RoleName == "MANAGER" ? "bg-warning" : "bg-success")">
                                                    <i class="fas @(user.RoleName == "ADMIN" ? "fa-shield-alt" :
                                                                    user.RoleName == "MANAGER" ? "fa-user-tie" : "fa-user") me-1"></i>
                                                    @user.RoleName
                                                </span>
                                            </td>
                                            <td>
                                                <small>@user.NgayDangKy.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-chart-line me-1"></i>
                                                    @user.TotalActivities
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary"
                                                            onclick="viewUser(@user.MaKH)"
                                                            title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-warning"
                                                            onclick="changeRole(@user.MaKH, '@user.RoleName')"
                                                            title="Đổi role">
                                                        <i class="fas fa-exchange-alt"></i>
                                                    </button>
                                                    @if (user.RoleName != "ADMIN")
                                                    {
                                                        <button class="btn btn-outline-danger"
                                                                onclick="deleteUser(@user.MaKH)"
                                                                title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có user nào</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: View User Details -->
<div class="modal fade" id="userDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-circle me-2"></i>Chi Tiết User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Change Role -->
<div class="modal fade" id="changeRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exchange-alt me-2"></i>Đổi Role
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="changeRoleUserId" />
                <div class="mb-3">
                    <label class="form-label">Role hiện tại:</label>
                    <p id="currentRole" class="fw-bold"></p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Chọn role mới:</label>
                    <select class="form-select" id="newRole">
                        <option value="CUSTOMER">CUSTOMER</option>
                        <option value="MANAGER">MANAGER</option>
                        <option value="ADMIN">ADMIN</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="confirmChangeRole()">
                    <i class="fas fa-check me-2"></i>Xác Nhận
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-card-small {
            border-left: 4px solid;
            transition: all 0.3s ease;
        }

            .stat-card-small:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }

        .user-avatar-small {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }

        #usersTable tbody tr {
            transition: all 0.2s ease;
        }

            #usersTable tbody tr:hover {
                background-color: #f8f9fa;
                transform: scale(1.01);
            }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}

@section Scripts {
    <script>
        // Search functionality
        $('#searchInput').on('keyup', function() {
            var value = $(this).val().toLowerCase();
            $('#usersTable tbody tr'). filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        // View user details
        function viewUser(userId) {
            $('#userDetailModal').modal('show');

            $. ajax({
                url: '@Url.Action("GetUserDetail", "Admin")',
                type: 'GET',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        var html = `
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>ID:</strong> ${response.data.maKH}</p>
                                    <p><strong>Họ tên:</strong> ${response.data.hoTen}</p>
                                    <p><strong>Email:</strong> ${response.data.email}</p>
                                    <p><strong>SĐT:</strong> ${response.data.sdt}</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Role:</strong> <span class="badge bg-primary">${response.data.roleName}</span></p>
                                    <p><strong>Ngày đăng ký:</strong> ${response.data.ngayDangKy}</p>
                                    <p><strong>Địa chỉ:</strong> ${response.data.diaChi || 'Chưa cập nhật'}</p>
                                    <p><strong>Tổng đơn hàng:</strong> ${response.data.totalOrders}</p>
                                </div>
                            </div>
                        `;
                        $('#userDetailContent').html(html);
                    } else {
                        $('#userDetailContent').html('<p class="text-danger">Không thể tải thông tin user! </p>');
                    }
                },
                error: function() {
                    $('#userDetailContent').html('<p class="text-danger">Có lỗi xảy ra! </p>');
                }
            });
        }

        // Change role
        function changeRole(userId, currentRole) {
            $('#changeRoleUserId').val(userId);
            $('#currentRole').text(currentRole);
            $('#newRole').val(currentRole);
            $('#changeRoleModal').modal('show');
        }

        function confirmChangeRole() {
            var userId = $('#changeRoleUserId').val();
            var newRole = $('#newRole').val();

            if (confirm('Bạn có chắc muốn đổi role cho user này?')) {
                $.ajax({
                    url: '@Url.Action("ChangeUserRole", "Admin")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        userId: userId,
                        newRole: newRole
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra! ');
                    }
                });
            }
        }

        // Delete user
        function deleteUser(userId) {
            if (confirm('Bạn có chắc muốn xóa user này?  Hành động này không thể hoàn tác! ')) {
                $.ajax({
                    url: '@Url.Action("DeleteUser", "Admin")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        userId: userId
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra!');
                    }
                });
            }
        }

        $(document).ready(function() {
            // Auto hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            console.log('✅ Users Management page loaded');
        });
    </script>
}
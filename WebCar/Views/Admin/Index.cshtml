@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-5 pt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                    Admin Dashboard
                </h2>
                <div>
                    <span class="text-muted">
                        <i class="fas fa-user me-2"></i>
                        @Session["CustomerName"]
                    </span>
                    <span class="badge bg-danger ms-2">@Session["RoleName"]</span>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-4 mb-4">
                <!-- Total Customers -->
                <div class="col-xl-3 col-md-6">
                    <div class="card stat-card bg-gradient-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase mb-2">Khách Hàng</h6>
                                    <h2 class="mb-0">@ViewBag.TotalCustomers</h2>
                                </div>
                                <div class="stat-icon">
                                    <i class="fas fa-users fa-3x"></i>
                                </div>
                            </div>
                            <a href="@Url.Action("Users", "Admin")" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Total Cars -->
                <div class="col-xl-3 col-md-6">
                    <div class="card stat-card bg-gradient-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase mb-2">Sản Phẩm</h6>
                                    <h2 class="mb-0">@ViewBag.TotalCars</h2>
                                </div>
                                <div class="stat-icon">
                                    <i class="fas fa-car fa-3x"></i>
                                </div>
                            </div>
                            <a href="@Url.Action("Products", "Admin" )" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Total Orders -->
                <div class="col-xl-3 col-md-6">
                    <div class="card stat-card bg-gradient-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase mb-2">Đơn Hàng</h6>
                                    <h2 class="mb-0">@ViewBag.TotalOrders</h2>
                                </div>
                                <div class="stat-icon">
                                    <i class="fas fa-shopping-cart fa-3x"></i>
                                </div>
                            </div>
                            <a href="@Url.Action("Orders", "Admin" )" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Total Revenue -->
                <div class="col-xl-3 col-md-6">
                    <div class="card stat-card bg-gradient-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase mb-2">Doanh Thu</h6>
                                    <h2 class="mb-0">@ViewBag.TotalRevenue.ToString("N0")</h2>
                                    <small>VNĐ</small>
                                </div>
                                <div class="stat-icon">
                                    <i class="fas fa-dollar-sign fa-3x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row g-4 mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Thao Tác Nhanh
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-users me-2"></i>Quản Lý Users
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-success w-100">
                                        <i class="fas fa-car me-2"></i>Quản Lý Sản Phẩm
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-warning w-100">
                                        <i class="fas fa-shopping-cart me-2"></i>Quản Lý Đơn Hàng
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Security", "Admin")" class="btn btn-outline-danger w-100">
                                        <i class="fas fa-shield-alt me-2"></i>Bảo Mật
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2 text-primary"></i>Đơn Hàng Gần Đây
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Chưa có dữ liệu</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line me-2 text-success"></i>Xe Bán Chạy
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Chưa có dữ liệu</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #fad961 0%, #f76b1c 100%);
        }

        .bg-gradient-danger {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }

        .stat-card {
            position: relative;
            overflow: hidden;
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            }

        .stat-icon {
            opacity: 0.3;
        }

        .stretched-link::after {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            z-index: 1;
            content: "";
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('✅ Admin Dashboard loaded');
        });
    </script>
}
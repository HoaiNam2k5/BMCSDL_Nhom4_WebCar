@section Scripts {
    <script>
        function toggleWishlist(btn, carId) {
            $(btn).toggleClass('active');
            console.log('Wishlist toggled for car:', carId);
            // TODO: Call API to save wishlist
        }

        function submitAdvancedFilter() {
            $('#advancedFilterForm').submit();
        }

        // Smooth scroll
        $('a[href^="#"]').on('click', function (e) {
            e.preventDefault();
            var target = $(this.getAttribute('href'));
            if (target.length) {
                $('html, body').stop().animate({
                    scrollTop: target.offset().top - 80
                }, 1000);
            }
        });

        // View mode toggle
        $('#gridView, #listView').on('change', function () {
            if ($('#listView').is(':checked')) {
                $('#productGrid').removeClass('row').addClass('list-view');
                $('.product-item').removeClass('col-lg-3 col-md-4 col-sm-6');
            } else {
                $('#productGrid').addClass('row').removeClass('list-view');
                $('.product-item').addClass('col-lg-3 col-md-4 col-sm-6');
            }
        });
    </script>
}